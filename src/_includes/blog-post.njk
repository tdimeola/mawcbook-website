---
layout: base.njk
---
<div class="blog-layout">
  <article class="blog-content">
    <h1>{{ title }}</h1>
    <p class="post-date">{{ page.date | dateString }}</p>
    {{ content | safe }}
  </article>
  <aside class="blog-sidebar">
    <h3>Posts</h3>
    <ul class="blog-list">
      {% for post in collections.blog %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <br><span class="post-date-small">{{ post.date | dateString }}</span>
      </li>
      {% endfor %}
    </ul>
  </aside>
</div>
